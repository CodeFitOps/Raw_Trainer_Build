{
  "$schema": "http://json-schema.org/schema#",
  "type": "object",
  "properties": {
    "NAME": {
      "type": "string"
    },
    "MODE": {
      "type": "string",
      "enum": ["LADDER", "ladder"]
    },
    "description": {
      "type": "string"
    },
    "ladder_type": {
      "type": "string",
      "enum": ["ASCENDING", "DESCENDING"],
      "default": "ASCENDING"
    },
    "increment_by": {
      "type": "integer",
      "default": 1,
      "description": "Cuantas reps se añaden o quitan en cada ronda."
    },
    "total_rounds": {
        "type": "integer",
        "description": "El número total de peldaños en la escalera."
    },
    "EXERCISES": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "NAME": {
            "type": "string"
          },
          "reps": {
            "type": "integer",
            "description": "Reps iniciales para el primer peldaño."
          },
          "weight": {
            "type": "integer"
          }
        },
        "required": [
          "NAME",
          "reps"
        ]
      }
    }
  },
  "required": [
    "EXERCISES",
    "MODE",
    "NAME",
    "total_rounds"
  ]
}